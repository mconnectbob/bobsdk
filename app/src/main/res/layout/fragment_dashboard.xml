<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        tools:context=".fragments.DashboardFragment">

        <include layout="@layout/common_card"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:id="@+id/btn_Details"
            android:text="View Holdings"
            android:background="@drawable/rounded_inner_orange"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:layout_width="@dimen/_96sdp"
            android:layout_height="@dimen/_31sdp"
            android:fontFamily="@font/acumin_rpro"/>
            <TextView
                android:id="@+id/btn_orderStatus"
                android:text="Order Status"
                android:background="@drawable/btn_secondary_rectangular"
                android:gravity="center"
                android:textColor="@color/btn_color"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="@dimen/_96sdp"
                android:layout_height="@dimen/_31sdp"
                android:fontFamily="@font/acumin_rpro"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore Mutual Funds"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/acumin_bdpro"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvExploreMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>


            </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:layout_marginLeft="@dimen/_7sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/acumin_bdpro"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvExploreReports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>


        </LinearLayout>



        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/existingPortfolio"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"

                android:background="@drawable/garycard">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    tools:ignore="Suspicious0dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="right|center">

                    <TextView
                        android:textColor="@color/btn_color"
                        android:textSize="@dimen/_14ssp"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:text="Portfolio Details"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acumin_rpro"/>

                    <TextView
                        android:text="Ensure a better future for your daughter today"

                        android:textColor="@color/btn_color"
                        android:textSize="@dimen/_10ssp"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/acumin_rpro"/>

                    <TextView
                        android:background="@drawable/rounded_inner_orange"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:text="View Details"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/acumin_bdpro"/>

                </LinearLayout>

            </LinearLayout>


                <LinearLayout
                    android:id="@+id/cvNewFund"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/pinkard">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        tools:ignore="Suspicious0dp">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="right|center">

                        <TextView
                            android:text="New Funds"
                            android:textColor="@color/btn_color"
                            android:textSize="@dimen/_14ssp"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/acumin_rpro"/>

                        <TextView
                            android:text="offers safety with attractive interest rate and returns"
                            android:textColor="@color/btn_color"
                            android:textSize="@dimen/_10ssp"
                            android:gravity="right"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/acumin_rpro"/>


                        <TextView
                            android:background="@drawable/rounded_inner_orange"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            android:layout_width="@dimen/_92sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:text="View Details"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/acumin_bdpro"/>

                    </LinearLayout>

                </LinearLayout>




        </LinearLayout>





        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_weight="75"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIP Calendar"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_bdpro"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click here to view your scheduled Systematic transactions"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/acumin_rpro"
                        android:textColor="@color/colorGray" />

                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIP helps you invest regularly for better gains."
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/acumin_rpro"
                        android:textColor="@color/colorGray" />

                </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/txtSipdetail"
                    android:background="@drawable/rounded_inner_orange"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:text="View Details"
                    android:fontFamily="@font/acumin_bdpro"
                    />

                <TextView
                    android:id="@+id/startNow"
                    android:background="@drawable/rounded_inner_orange"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:text="Start Now"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/acumin_bdpro"/>

            </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Risk Profile"
                        android:textSize="@dimen/_14ssp"
                        android:layout_weight="1"
                        android:fontFamily="@font/acumin_bdpro"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/imgLoadRiskProfile"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/refresh" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearRiskProfile"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="60"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Conservative"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_15ssp"
                            android:fontFamily="@font/acumin_rpro"
                            android:textColor="@color/light_green"
                            android:id="@+id/tv_risk_profile_value"/>

                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Re-assess"
                            android:id="@+id/btn_re_access_risk_profile"
                            android:background="@drawable/rounded_inner_orange"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            android:layout_width="@dimen/_96sdp"
                            android:layout_height="@dimen/_31sdp"
                            android:fontFamily="@font/acumin_rpro"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|top">

                    <FrameLayout
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp">
                        <ImageView
                            android:id="@+id/imgConservative"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:src="@drawable/a"/>

                        <ImageView
                            android:id="@+id/imgModerate"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:src="@drawable/b"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/imgAggressive"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:src="@drawable/c"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/imghighlyAggressive"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:src="@drawable/d"
                            android:visibility="gone"/>


                    </FrameLayout>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/risk_profile_view"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:visibility="gone"
                       />

                </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction History"
                android:textSize="@dimen/_14ssp"
                android:layout_weight="1"
                android:fontFamily="@font/acumin_bdpro"
                android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imgLoadTransaction"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/refresh"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/linearTransaction">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTransaction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="vertical"/>
                    <TextView
                        android:id="@+id/txtTransaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No transactions found in last 3 months"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/acumin_bdpro"
                        android:textColor="@color/btn_color" />

                </FrameLayout>

                <TextView
                    android:id="@+id/txtViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/load_more"
                    android:textSize="@dimen/_12ssp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/acumin_bdpro"
                    android:textColor="@color/btn_color" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>

</androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/drawerMenuLLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical" />

</LinearLayout>