<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/header_bg_color"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/img_back_arrow"
                    android:id="@+id/imgBack"
                    android:visibility="gone"
                    android:layout_gravity="center|start"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:textColor="@color/color_light_orange"
                    android:textSize="@dimen/_12ssp"
                    android:text="Explore Mutual Funds"
                    android:fontFamily="@font/acumin_bdpro"
                    android:gravity="center"
                    android:visibility="visible"/>
                <ImageView
                    android:layout_width="76dp"
                    android:layout_height="45dp"
                    android:background="@drawable/app_logo_orange"
                    android:visibility="visible"
                    android:id="@+id/imageViewLogo"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgDashbaord"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:visibility="gone"
                        android:src="@drawable/dashboard_whitecolor"/>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:src="@drawable/more"
                        android:visibility="gone"/>


                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="@string/fa_icon_user"
                        android:visibility="gone"
                        android:textSize="25dp"
                        android:id="@+id/tvUserHeader"/>


                    <TextView
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fa_icon_bell"
                        android:visibility="gone"
                        android:textSize="25dp"
                        android:id="@+id/tvBellHeader"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fa_icon_cart"
                        android:visibility="visible"
                        android:textSize="20dp"
                        android:layout_marginRight="@dimen/_35sdp"
                        android:textColor="@color/btn_color"
                        android:id="@+id/tvCartHeader"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMenu"
                    android:gravity="center_vertical|right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/more"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/menu"
                        android:layout_width="0dp"
                        android:layout_weight="15"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="25dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/white"
                        android:text="@string/fa_icon_menu"
                        android:visibility="gone" />

                </LinearLayout>


            </FrameLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>