<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
     >

    <LinearLayout
        android:id="@+id/linearHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="horizontal"
        android:gravity="center|start">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/menu_home"
            app:tint="@color/btn_color"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="16sp"

            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/acumin_rpro"
            android:layout_marginBottom="@dimen/_1sdp"
            android:textColor="@color/btn_color"
        />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/linearDimatHolding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center|start">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/menu_holdings"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demat Holdings"
                android:textSize="16sp"
                android:fontFamily="@font/acumin_rpro"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/btn_color"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearStopSip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center|start">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/menu_sip"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop SIP"
                android:textSize="16sp"
                android:fontFamily="@font/acumin_rpro"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/btn_color"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:gravity="center|start">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/menu_profile"
                app:tint="@color/btn_color"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="16sp"
                android:fontFamily="@font/acumin_rpro"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/btn_color"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>