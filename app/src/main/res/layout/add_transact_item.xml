<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearDatas"
        android:layout_marginTop="@dimen/_7sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_marginLeft="10dp"
           android:fontFamily="@font/acumin_bdpro"
            android:textSize="@dimen/_14ssp"
            android:layout_width="0dp"
            android:layout_weight="85"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:id="@+id/tv_scheme_name"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">

            <ImageView
                android:id="@+id/imgDetails"
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sheet"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/_12ssp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorGray"
            android:layout_height="wrap_content"
            android:text="Folio no : "
            android:fontFamily="@font/acumin_rpro"/>

        <TextView
            android:textSize="@dimen/_12ssp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="258524"
            android:id="@+id/tv_folio_no"
            android:fontFamily="@font/acumin_rpro"/>

        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:textSize="@dimen/_12ssp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorGray"
            android:layout_height="wrap_content"
            android:text="Units : "
            android:fontFamily="@font/acumin_rpro"/>

        <TextView
            android:textSize="@dimen/_12ssp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="258524"
            android:id="@+id/tv_units"
            android:fontFamily="@font/acumin_rpro"/>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/_12ssp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_height="wrap_content"
                android:text="Investment "
                android:fontFamily="@font/acumin_rpro"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"

                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="1,50,045"
                android:id="@+id/tv_cost"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/acumin_bdpro"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:textColor="@color/light_green"
                android:layout_height="wrap_content"
                android:text="10% " />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/acumin_rpro"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_height="wrap_content"
                android:text="Net Gain " />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="1,50,045"
                android:id="@+id/tv_net_gain"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/acumin_bdpro"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/acumin_bdpro"
                android:layout_width="wrap_content"
                android:textColor="@color/light_green"
                android:layout_height="wrap_content"
                android:text="10% "
                android:id="@+id/tv_gain_or_loss_percent"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/acumin_rpro"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_height="wrap_content"
                android:text="Market Value " />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/acumin_bdpro"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="1,50,045"
                android:id="@+id/tv_market_value"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/acumin_rpro"
                    android:text="XIRR : "
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_xiir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acumin_bdpro"
                    android:text="10%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/transact"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_rectangular"
            android:layout_width="@dimen/_98sdp"
            android:layout_height="@dimen/_31sdp"
            android:drawableRight="@drawable/dropdown"
            android:paddingRight="@dimen/_12ssp"
            android:text="Invest"
              android:fontFamily="@font/acumin_rpro"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/tvExit"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_rectangular"
            android:layout_width="@dimen/_98sdp"
            android:layout_height="@dimen/_31sdp"
            android:drawableRight="@drawable/dropdown"
            android:text="Redeem"
            android:paddingRight="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:fontFamily="@font/acumin_rpro"
            android:textSize="@dimen/_12sdp"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/light_gray"/>

    </LinearLayout>
</LinearLayout>