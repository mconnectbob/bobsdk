<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp">

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_145sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/rounded_inner_white_ourte_gray"
                    android:orientation="horizontal"
                    android:id="@+id/layout_date">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:padding="8dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_10ssp"
                        android:text="Select Date"
                        android:fontFamily="@font/acumin_rpro"
                        android:textColor="@color/colorGray"
                        android:id="@+id/tv_selected_date"/>

                    <TextView
                        android:id="@+id/calender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/fa_icon_calender"
                        android:layout_margin="8dp"
                        android:tint="@color/btn_color" />

                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Go"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/acumin_rpro"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_rectangular"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/tv_go"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:visibility="gone"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/btn_color"
                    android:fontFamily="@font/acumin_bdpro"
                    android:id="@+id/tv_clear"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="SIP"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_rpro"/>

                    <LinearLayout
                        android:id="@+id/viewBuy"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="@color/color_light_orange" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSWP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/swp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="SWP"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_rpro"/>

                    <LinearLayout
                        android:id="@+id/viewSWP"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="STP"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_rpro"/>

                    <LinearLayout
                        android:id="@+id/viewSTP"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:padding="10dp"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_rpro"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rounded_inner_white_ourte_gray"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:src="@drawable/search"
                app:tint="@color/btn_color" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="@dimen/_12ssp"
                android:hint="Search for funds..."
                android:textColor="@color/colorGray"
                android:fontFamily="@font/acumin_rpro"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
    <Button
        android:id="@+id/btnStop"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_31sdp"
        android:background="@drawable/btn_rectangular"
        android:gravity="center"
        android:text="@string/stop"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/acumin_rpro"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>