<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:textSize="@dimen/_14ssp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Kotak Balanced Advantage Fund"
        android:fontFamily="@font/acumin_bdpro" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView

            android:layout_width="wrap_content"
            android:textColor="@color/colorGray"
            android:layout_height="wrap_content"
            android:text="Asset Type : "
            android:fontFamily="@font/acumin_rpro"
            android:textSize="@dimen/_8ssp"/>

        <TextView
            android:id="@+id/folioNo"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/acumin_bdpro"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="258524"
            />

        <LinearLayout
            android:id="@+id/corporateAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_height="wrap_content"
                android:text="Purpose : "
                android:fontFamily="@font/acumin_rpro"
                android:textSize="@dimen/_8ssp"/>

            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="258524"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/acumin_bdpro"
                />

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_height="wrap_content"
                android:text="Quantity : "
                android:fontFamily="@font/acumin_rpro"
                android:textSize="@dimen/_8ssp"/>

            <TextView
                android:id="@+id/nav"
                android:textSize="@dimen/_9ssp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="200"
                android:ellipsize="end"
                android:lines="1"
                android:fontFamily="@font/acumin_bdpro"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/acumin_rpro"
                android:textSize="@dimen/_12ssp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_height="wrap_content"
                android:text="Date " />

            <TextView
                android:id="@+id/date"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/acumin_bdpro"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="7-Aug-2020" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/acumin_rpro"
                android:textSize="@dimen/_12ssp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_height="wrap_content"
                android:text="Cost" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/transactionType"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/acumin_bdpro"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Switch Out" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/acumin_rpro"
                android:textSize="@dimen/_12ssp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_height="wrap_content"
                android:text="Amount " />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/amount"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/acumin_bdpro"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="30,045" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/light_gray"/>

</LinearLayout>