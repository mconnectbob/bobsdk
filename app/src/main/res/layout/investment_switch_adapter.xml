<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/linearData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_9sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginBottom="@dimen/_9sdp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:buttonTint="@color/btn_color"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:fontFamily="@font/acumin_rpro"
                    android:text="Scheme Name"
                    android:textColor="#858790"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acumin_rpro"
                    android:text="Amount"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="#858790"
                    android:textSize="@dimen/_12ssp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp">
                <CheckBox
                    android:id="@+id/chkSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/btn_color"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtSchemeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kotak Balanced Advantage"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/acumin_bdpro"
                    android:layout_weight="1"
             android:maxLines="3"
                    android:gravity="center|start"
                    android:textColor="@color/dark_black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7,000"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/acumin_bdpro"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/dark_black"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cart_delete"
                    android:gravity="end"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    app:tint="@color/btn_color" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal"
                android:gravity="center|start">
                <CheckBox
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/btn_color"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Folio:"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/acumin_rpro"
                    android:layout_marginLeft="@dimen/_21sdp"
                    android:textColor="#5E5E5E"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtFolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="904375456"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/acumin_bdpro"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="@dimen/_11ssp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/dark_black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequency:"
                    android:visibility="gone"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/acumin_rpro"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="#5E5E5E"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly"
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/acumin_bdpro"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:visibility="gone"
                    android:textSize="@dimen/_11ssp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="@color/dark_black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day:"
                    android:visibility="gone"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/acumin_rpro"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textColor="#5E5E5E"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:visibility="gone"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/acumin_bdpro"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textColor="@color/dark_black"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Fund Value"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_rpro"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/cart_list_text_color"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtCurrentFundValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="199,99.90"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_bdpro"
                        android:textColor="@color/dark_black"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Units"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_rpro"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/cart_list_text_color"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtCurrentunits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6,296.90"


                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_bdpro"

                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="@color/dark_black"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Switch To Fund"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_rpro"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/cart_list_text_color"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtSwitchFund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Axis All Seasons Debt Fund of Funds Reg-DM    "
                        android:layout_marginTop="@dimen/_4sdp"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_bdpro"
                        android:gravity="center"
                        android:textColor="@color/dark_black"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="Order basis"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_rpro"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:textColor="@color/cart_list_text_color"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtOrderBasis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Partial Amount"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center"

                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_bdpro"

                        android:textColor="@color/dark_black"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="Amount/No of Units to Switch"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_rpro"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/cart_list_text_color"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtNoOfUnitsSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/acumin_bdpro"

                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="@color/dark_black"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</RelativeLayout>