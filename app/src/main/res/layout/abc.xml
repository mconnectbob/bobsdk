<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/linearData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardBackgroundColor="@color/cart_list_color"
        app:cardCornerRadius="@dimen/_9sdp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp">
            <TextView
                android:id="@+id/fundName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kotak Balanced Advantage Fund"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/acumin_bdpro"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/white_rect">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Script Name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:textColor="#858790"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/acumin_rpro"/>
                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:id="@+id/name"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/acumin_bdpro"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Ashok Jain" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_7sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/acumin_rpro"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGray"
                            android:layout_height="wrap_content"
                            android:text="Date" />

                        <TextView
                            android:id="@+id/date"
                            android:textSize="@dimen/_12ssp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/acumin_bdpro"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="17-Aug-2020" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/acumin_rpro"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorGray"
                            android:layout_height="wrap_content"
                            android:text="Amount" />

                        <TextView
                            android:id="@+id/amount"
                            android:textSize="@dimen/_12ssp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/acumin_bdpro"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="11500"
                            android:ellipsize="end"
                            android:lines="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/acumin_rpro"
                            android:layout_width="match_parent"
                            android:textColor="@color/colorGray"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:text="Status" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">
                            <TextView
                                android:id="@+id/status"
                                android:textSize="@dimen/_12ssp"
                                android:layout_height="@dimen/_21sdp"
                                android:fontFamily="@font/acumin_bdpro"
                                android:layout_width="@dimen/_72sdp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:ellipsize="end"
                                android:lines="1"
                                android:text="11500"  />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </LinearLayout>


                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</RelativeLayout>